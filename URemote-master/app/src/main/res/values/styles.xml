<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="command_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="holo_blue_btn">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/holo_blue_btn</item>
        <item name="android:textColor">@color/holo_blue_btn</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="media_button" parent="@style/command_button">
        <item name="android:layout_width">@dimen/media_button_width</item>
        <item name="android:layout_height">@dimen/media_button_height</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="d_pad_button" parent="@style/command_button">
        <item name="android:layout_width">@dimen/media_button_width</item>
        <item name="android:layout_height">@dimen/media_button_height</item>
        <item name="android:layout_margin">5dp</item>
    </style>

</resources>