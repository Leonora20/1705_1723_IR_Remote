    <style name="text_font_light" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="text_font_thin" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">sans-serif-thin</item>
