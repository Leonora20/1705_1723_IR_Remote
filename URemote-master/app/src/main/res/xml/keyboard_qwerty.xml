<?xml version="1.0" encoding="utf-8"?>

<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:keyHeight="@dimen/key_height"
    android:keyWidth="10%p">

    <Row>
        <Key
            android:codes="@integer/code_1"
            android:keyEdgeFlags="left"
            android:keyLabel="@string/kb_1" />
        <Key
            android:codes="@integer/code_2"
            android:keyLabel="@string/kb_2" />
        <Key
            android:codes="@integer/code_3"
            android:keyLabel="@string/kb_3" />
        <Key
            android:codes="@integer/code_4"
            android:keyLabel="@string/kb_4" />
        <Key
            android:codes="@integer/code_5"
            android:keyLabel="@string/kb_5" />
        <Key
            android:codes="@integer/code_6"
            android:keyLabel="@string/kb_6" />
        <Key
            android:codes="@integer/code_7"
            android:keyLabel="@string/kb_7" />
        <Key
            android:codes="@integer/code_8"
            android:keyLabel="@string/kb_8" />
        <Key
            android:codes="@integer/code_9"
            android:keyLabel="@string/kb_9" />
        <Key
            android:codes="@integer/code_0"
            android:keyLabel="@string/kb_0" />
        <Key
            android:codes="@integer/code_backspace"
            android:isRepeatable="true"
            android:keyEdgeFlags="right"
            android:keyIcon="@drawable/sym_keyboard_delete" />
    </Row>

    <Row>
        <Key
            android:codes="@integer/code_tab"
            android:keyEdgeFlags="left"
            android:keyLabel="@string/kb_tab" />
        <Key
            android:codes="@integer/code_lowercase_q"
            android:keyLabel="@string/kb_lowercase_q" />
        <Key
            android:codes="@integer/code_lowercase_w"
            android:keyLabel="@string/kb_lowercase_w" />
        <Key
            android:codes="@integer/code_lowercase_e"
            android:keyLabel="@string/kb_lowercase_e" />
        <Key
            android:codes="@integer/code_lowercase_r"
            android:keyLabel="@string/kb_lowercase_r" />
        <Key
            android:codes="@integer/code_lowercase_t"
            android:keyLabel="@string/kb_lowercase_t" />
        <Key
            android:codes="@integer/code_lowercase_y"
            android:keyLabel="@string/kb_lowercase_y" />
        <Key
            android:codes="@integer/code_lowercase_u"
            android:keyLabel="@string/kb_lowercase_u" />
        <Key
            android:codes="@integer/code_lowercase_i"
            android:keyLabel="@string/kb_lowercase_i" />
        <Key
            android:codes="@integer/code_lowercase_o"
            android:keyLabel="@string/kb_lowercase_o" />
        <Key
            android:codes="@integer/code_lowercase_p"
            android:keyEdgeFlags="right"
            android:keyLabel="@string/kb_lowercase_p" />
    </Row>

    <Row>
        <Key
            android:codes="@integer/code_lowercase_a"
            android:keyEdgeFlags="left"
            android:keyLabel="@string/kb_lowercase_a" />
        <Key
            android:codes="@integer/code_lowercase_s"
            android:keyLabel="@string/kb_lowercase_s" />
        <Key
            android:codes="@integer/code_lowercase_d"
            android:keyLabel="@string/kb_lowercase_d" />
        <Key
            android:codes="@integer/code_lowercase_f"
            android:keyLabel="@string/kb_lowercase_f" />
        <Key
            android:codes="@integer/code_lowercase_g"
            android:keyLabel="@string/kb_lowercase_g" />
        <Key
            android:codes="@integer/code_lowercase_h"
            android:keyLabel="@string/kb_lowercase_h" />
        <Key
            android:codes="@integer/code_lowercase_j"
            android:keyLabel="@string/kb_lowercase_j" />
        <Key
            android:codes="@integer/code_lowercase_k"
            android:keyLabel="@string/kb_lowercase_k" />
        <Key
            android:codes="@integer/code_lowercase_l"
            android:keyLabel="@string/kb_lowercase_l" />
        <Key
            android:codes="@integer/code_enter"
            android:keyEdgeFlags="right"
            android:keyIcon="@drawable/sym_keyboard_return" />
    </Row>

    <Row>
        <Key
            android:codes="@integer/code_shift"
            android:isModifier="true"
            android:isSticky="true"
            android:keyEdgeFlags="left"
            android:keyIcon="@drawable/sym_keyboard_shift" />
        <Key
            android:codes="@integer/code_lowercase_z"
            android:keyLabel="@string/kb_lowercase_z" />
        <Key
            android:codes="@integer/code_lowercase_x"
            android:keyLabel="@string/kb_lowercase_x" />
        <Key
            android:codes="@integer/code_lowercase_c"
            android:keyLabel="@string/kb_lowercase_c" />
        <Key
            android:codes="@integer/code_lowercase_v"
            android:keyLabel="@string/kb_lowercase_v" />
        <Key
            android:codes="@integer/code_lowercase_b"
            android:keyLabel="@string/kb_lowercase_b" />
        <Key
            android:codes="@integer/code_lowercase_n"
            android:keyLabel="@string/kb_lowercase_n" />
        <Key
            android:codes="@integer/code_lowercase_m"
            android:keyLabel="@string/kb_lowercase_m" />
        <Key
            android:codes="@integer/code_period"
            android:keyLabel="@string/kb_period" />
        <Key
            android:codes="@integer/code_slash"
            android:keyEdgeFlags="right"
            android:keyLabel="@string/kb_slash" />
    </Row>

    <Row>
        <Key
            android:codes="@integer/code_ctrl"
            android:isModifier="true"
            android:isSticky="true"
            android:keyEdgeFlags="left"
            android:keyLabel="@string/kb_ctrl"
            android:keyWidth="12%p" />
        <Key
            android:codes="@integer/code_alt_left"
            android:isModifier="true"
            android:isSticky="true"
            android:keyLabel="@string/kb_alt"
            android:keyWidth="12%p" />
        <Key
            android:codes="@integer/code_space"
            android:isRepeatable="true"
            android:keyIcon="@drawable/sym_keyboard_space"
            android:keyWidth="64%p" />
        <Key
            android:codes="@integer/code_windows"
            android:isModifier="true"
            android:isSticky="true"
            android:keyEdgeFlags="right"
            android:keyLabel="@string/kb_windows"
            android:keyWidth="12%p" />
    </Row>

</Keyboard>