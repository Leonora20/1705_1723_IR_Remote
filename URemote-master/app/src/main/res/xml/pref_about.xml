<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/about">

        <Preference
            android:summary="@string/developer_name"
            android:title="@string/developer" />

        <Preference
            android:summary="@string/website_address"
            android:title="@string/website">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/website_address" />
        </Preference>

        <Preference
            android:key="@string/app_version_key"
            android:title="@string/app_version_title" />

    </PreferenceCategory>
</PreferenceScreen>