<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.aurasphere.bluepair">

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".FirstPage"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".Opt_AC"></activity>
        <activity android:name=".Opt_Speaker"></activity>
        <activity android:name=".Opt_Projector"></activity>
        <activity android:name=".Opt_TV"></activity>
        <activity android:name=".AC_MainActivity"></activity>
        <activity android:name=".TV_MainActivity"></activity>
        <activity android:name=".Projector_MainActivity"></activity>
        <activity android:name=".Speaker_MainActivity"></activity>
    </application>

</manifest>