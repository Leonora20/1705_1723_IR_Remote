<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="      Wireless Remote"
            android:layout_width="325dp"
            android:layout_height="60dp" android:id="@+id/textView" android:textSize="36sp"
            android:layout_marginLeft="40dp" android:layout_marginTop="50dp" android:layout_marginBottom="20dp"
            android:textColor="@android:color/black" android:backgroundTint="@android:color/darker_gray"
            android:background="@android:color/darker_gray" android:fontFamily="cursive"/>
    <ImageButton
            android:layout_width="140dp"
            android:layout_height="140dp" app:srcCompat="@drawable/acnew" android:id="@+id/ac"
            android:layout_marginLeft="40dp" android:layout_marginTop="160dp"
            android:backgroundTint="@android:color/holo_blue_bright"/>
    <ImageButton
            android:layout_width="140dp"
            android:layout_height="140dp" app:srcCompat="@drawable/projectornew2" android:id="@+id/projector"
            android:layout_marginTop="160dp" android:layout_toRightOf="@+id/ac"
            android:layout_marginRight="40dp" android:layout_marginLeft="40dp"
            android:backgroundTint="#FFF1FF01"/>
    <ImageButton
            android:layout_width="140dp"
            android:layout_height="140dp" app:srcCompat="@drawable/speaker" android:id="@+id/speaker"
            android:layout_marginLeft="40dp" android:layout_marginTop="340dp"
            android:backgroundTint="#FFF1FF01"/>
    <ImageButton
            android:layout_width="140dp"
            android:layout_height="140dp" app:srcCompat="@drawable/tvnew" android:id="@+id/tv"
            android:layout_toRightOf="@+id/speaker" android:layout_marginTop="340dp" android:layout_marginLeft="40dp"
            android:backgroundTint="@android:color/holo_blue_bright"/>
</RelativeLayout>